{
  "manifest_version": 2,

  "name" : "XKCD Translate",
  "description" : "Based on XKCD Comic #1625",
  "version" : "1.0.0",

  "permissions": [
    "activeTab"
  ],

  "icons": {
   "128": "logo.png"
  },

  "web_accessible_resources": [
    "map.json"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "logo.png",
    "default_title" : "XKCD translate!"
  }
}
